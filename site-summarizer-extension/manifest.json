{
  "manifest_version": 3,
  "name": "Site Summarizer (ChatGPT / Gemini)",
  "version": "1.0.0",

  "action": {
    "default_title": "要約",
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background.js",
  "type": "module"
  },

  "commands": {
    "summarize-now": {
      "suggested_key": {
        "default": "Alt+G"
      },
      "description": "現在のタブを要約する"
    }
  }
}
